<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_setting_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_main_bt_margin_50"
        android:text="@string/text_reset"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/switch_button_reset"/>

    <com.suke.widget.SwitchButton
        android:id="@+id/switch_button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:sb_shadow_color="@color/colorPrimaryDark"
        app:sb_checked_color="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@id/tv_setting_reset"
        app:layout_constraintBottom_toBottomOf="@id/tv_setting_reset"
        app:layout_constraintLeft_toRightOf="@id/tv_setting_reset"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>